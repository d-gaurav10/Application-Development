@page "/"
@using static Trackfy.Components.Layout.MainLayout
@inject IJSRuntime JS
@inject NavigationManager Navigation

<div class="container">
    <div class="left-panel">
        <img src="./logo.svg" alt="Trackify Logo" class="logo" />
    </div>
    <div class="right-panel">
        <h2>Login</h2>

        <form>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Enter username:</label>
                <input type="text" class="form-control" id="exampleInputEmail1" @bind="username" placeholder="Enter username" />
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Enter Password:</label>
                <input type="password" class="form-control" id="exampleInputPassword1" @bind="password" placeholder="Enter password" />
            </div>

            <div class="mb-3">
                <label for="currencyType" class="form-label">Select the currency type:</label>
                <select class="form-select" id="currencyType" aria-label="Currency type" @bind="currencyType">
                    <option value="" selected disabled>Select the currency type</option>
                    <option value="NPR">NPR</option>
                    <option value="USD">USD</option>
                    <option value="YEN">YEN</option>
                    <option value="INR">INR</option>
                </select>
            </div>

            <button type="button" class="btn btn-primary" @onclick="LoginUser">Login</button>
            <div class="separator">OR</div>
            <NavLink class="nav-link" href="register" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span>  <button type="button" class="btn-secondary">Register New Account</button>
            </NavLink>
        </form>
       
        
    </div>
</div>

<script>
    function showAlert(message) {
        alert(message);
    }
</script>

