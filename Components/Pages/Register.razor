@page "/register"
@inject NavigationManager Navigation
@using Trackfy.Models
@using static Trackfy.Components.Layout.MainLayout
@inject IJSRuntime JS


<div class="container">
    <div class="left-panel">
        <img src="./logo.svg" alt="Trackify Logo" class="logo" />
        
    </div>
    <div class="right-panel">
        <h2>Create New Account</h2>
        <form>
            <div class="mb-3">
                <label for="exampleInputFirstName" class="form-label">Enter First Name</label>
                <input type="text" class="form-control" id="exampleInputFirstName" @bind="first_name">
            </div>
            <br />
            <div class="mb-3">
                <label for="exampleInputLastName" class="form-label">Enter Last Name</label>
                <input type="text" class="form-control" id="exampleInputLastName" @bind="last_name">
            </div>
            <br />
            <div class="mb-3">
                <label for="exampleInputUsername" class="form-label">Enter Username</label>
                <input type="text" class="form-control" id="exampleInputUsername" aria-describedby="emailHelp" @bind="username">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <br />
            <div class="mb-3">
                <label for="exampleInputPassword" class="form-label">Enter Password</label>
                <input type="password" class="form-control" id="exampleInputPassword" @bind="password">
            </div>
            <br />
            <button type="button" class="btn btn-primary" @onclick="SignInUser">Register</button>
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span><button type="button" class="btn btn-secondary">Go back to Login</button>
            </NavLink>
        </form>
    </div>
</div>



<style>
    .container {
        display: flex;
        height: 100vh;
        font-family: Poppins, sans-serif;
    }

    .left-panel {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: white;
        padding: 20px;
        border-right: 2px solid #ddd;
    }

    .logo {
        width: 100px;
        margin-bottom: 20px;
    }

    .left-panel h1 {
        font-size: 30px;
        font-weight: bold;
    }

    .right-panel {
        flex: 1.5;
        background-color: #dfffd6;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 30px;
    }

        .right-panel h2 {
            font-size: 30px;
            font-weight: bold;
            margin-bottom: 20px;
        }

    form {
        width: 80%;
        max-width: 400px;
        display: flex;
        flex-direction: column;
    }

    .form-label {
        font-weight: bold;
        font-size: 14px;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        font-size: 14px;
        width: 100%;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        color: white;
        background-color: #2d2e83;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #1f1f5e;
        }

    .form-select {
        padding: 10px;
        border-radius: 5px;
        margin-top: 10px;
        width: 100%;
    }

    .mb-3 {
        margin-bottom: 10px;
    }

    .form-text {
        font-size: 12px;
        color: gray;
    }

    .nav-link {
        text-decoration: none;
        color: #007bff;
        font-size: 14px;
        margin-top: 20px;
    }

        .nav-link:hover {
            text-decoration: underline;
        }

    .btn-secondary {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        color: black;
        background-color: #ffe4e1;
        border: 1px solid #ccc;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-secondary:hover {
            background-color: #ffcccc;
        }

    .separator {
        text-align: center;
        margin: 15px 0;
        font-size: 14px;
        color: #777;
    }

</style>

<script>
    function showAlert(message) {
        alert(message); // Display the custom message in the alert box
    }
</script>


